<%- include("layout/header") %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert">
        <button
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label=""
          Close></button>
        <strong><% message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (users !== "") { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th><% index %></th>
              <th>
                <img
                  src="<%= row.image %>"
                  width="50"
                  class="img-thumbnail"
                  alt="" />
              </th>
              <th><% row.name %></th>
              <th><% row.email %></th>
              <th><% row.phone %></th>
              <th><%  %></th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user) => { %>
            <tr>
              <td><%= user._id %></td>
              <td>
                <img
                  src="<%= user.image %>"
                  class="rounded-circle"
                  style="width: 50px; height: 50px" />
              </td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td>
                <a href="/edit/<%= user._id %>" class="btn btn-sm btn-primary"
                  >Edit</a
                >
                <a href="/delete/<%= user._id %>" class="btn btn-sm btn-danger"
                  >Delete</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %
        <h1 class="text-center text-secondary mt-5">No Users Found</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include("layout/footer") %>
